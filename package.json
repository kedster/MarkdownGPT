{
  "name": "markdowngpt",
  "version": "1.0.0",
  "description": "Transform your raw text with AI-powered formatting and processing",
  "main": "script.js",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8000",
    "build": "npm run build:copy",
    "build:prod": "npm run build:optimize && npm run build:copy",
    "build:copy": "mkdir -p dist && cp -r *.html *.js *.css *.json dist/ && cp -r docs dist/ 2>/dev/null || true",
    "build:optimize": "echo 'Build optimization: copying production files' && cp index.production.html dist/index.html 2>/dev/null || cp index.html dist/index.html",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov > coverage/lcov.info",
    "test:e2e": "playwright test",
    "test:github-models": "ENABLE_GITHUB_MODELS=true npm test",
    "test:playground": "echo 'Testing GitHub Models playground integration'",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js *.html *.css *.md",
    "validate": "npm run lint && npm run test",
    "serve": "python3 -m http.server 8000",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "deploy": "npm run build:prod && echo 'Ready for deployment'",
    "deploy:gh-pages": "npm run build:prod && gh-pages -d dist"
  },
  "keywords": [
    "markdown",
    "ai",
    "text-processing",
    "gpt",
    "formatting",
    "web-app",
    "javascript"
  ],
  "author": "MarkdownGPT Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kedster/MarkdownGPT.git"
  },
  "bugs": {
    "url": "https://github.com/kedster/MarkdownGPT/issues"
  },
  "homepage": "https://kedster.github.io/MarkdownGPT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**",
      "!dist/**",
      "!playwright.config.js",
      "!tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}